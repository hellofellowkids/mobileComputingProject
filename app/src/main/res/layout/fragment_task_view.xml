<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/crimson"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@color/crimson"
                android:clickable="true"
                android:padding="4dp"
                tools:ignore="RtlHardcoded"
                android:src="@drawable/back_32"
                android:focusable="true"
                android:contentDescription="@string/content_desc" />
                <!-- android:src="@drawable/ic_baseline_arrow_back_32" -->

            <ImageButton
                android:id="@+id/delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/crimson"
                android:padding="4dp"
                tools:ignore="RtlHardcoded"
                android:src="@drawable/delete_32"
                android:clickable="true"
                android:contentDescription="@string/content_desc"
                android:focusable="true" />
                <!-- android:src="@drawable/ic_baseline_delete_32" -->


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:gravity="bottom"
            android:shadowColor="@color/black"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="0.01"
            tools:text="UI Design Mockup"
            android:textColor="@color/white"
            android:textSize="32sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="right"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/time_32_red"/>
            <!-- android:src="@drawable/ic_baseline_access_time_32_red" -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/due_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/red"
                tools:text="Wednesday, September 16, 2020"
                />

            <TextView
                android:id="@+id/due_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/red"
                tools:text="8 AM"
                />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/time_32_green"/>
            <!-- android:src="@drawable/ic_baseline_access_time_32_green" -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="Tuesday, September 15, 2020"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/personal_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="7 PM"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/notifications_32"/>
            <!-- android:src="@drawable/ic_baseline_notifications_32" -->

        <TextView
            android:id="@+id/reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Daily - 5 PM"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/priority_32_black"/>
        <!-- android:src="@drawable/ic_baseline_priority_high_32_black" -->

            <TextView
                android:id="@+id/priority_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="Low Priority"
                android:textColor="@color/black"
                android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"
            android:src="@drawable/subject_32"/>

        <!-- android:src="@drawable/ic_baseline_subject_32" -->

        <TextView
            android:id="@+id/subject_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Mobile Computing"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="64dp">

        <ImageButton
            android:id="@+id/edit_settings_button"
            android:background="@drawable/border"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:layout_marginStart="72dp"
            android:src="@drawable/settings_48"
            />
        <!-- android:background="@drawable/border"
        android:src="@drawable/ic_baseline_settings_48_black" -->

        <ImageButton
            android:id="@+id/check_button"
            android:background="@drawable/border"
            android:src="@drawable/check_48_black"
            android:layout_marginStart="64dp"
            android:layout_width="100dp"
            android:layout_height="66dp" />
            <!-- android:background="@drawable/border"
            android:src="@drawable/ic_baseline_check_48" /> -->

    </LinearLayout>

</LinearLayout>